<div id="results">
<% if @items.empty? or @items.nil? %>
  <p><em>There are no items in this category.</em></p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Category</th>
        <th>Quantity</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.code %></td>
          <td><%= item.name %></td>
          <td><%= item.category.name %></td>
          <td><%= item.quantity %></td>
          <td><%= link_to 'Show', item %></td>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<% end %>
<%= link_to 'Check In', new_item_path %>
<%= link_to 'Check Out', checkout_path %>
<%= link_to 'Add a category', new_category_path %>
</div>