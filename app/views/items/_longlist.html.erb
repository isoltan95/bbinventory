
<div id="longresults">
<% if @items.empty? or @items.nil? %>
  <p><em>There are no items in this category.</em></p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Barcode</th>
        <th>Name</th>
        <th>Category</th>
        <th>Gender</th>
        <th>Age</th>
        <th>Quantity</th>
        <th>Notes</th>
        <th>Donated</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.barcode %></td>
          <td><%= item.name %></td>
          <% if !item.category.nil? %>
            <td><%= item.category.name %></td>
          <% else %>
            <td></td>
          <% end %>
          <td><%= item.gender %></td>
          <td><%= item.age %></td>
          <td><%= item.quantity %></td>
          <td><%= item.notes %></td>
          <td><%= item.donated %></td>
          <td><%= link_to 'Show', item %></td>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<% end %>
<%= will_paginate @items, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
<br>
<%= link_to 'Check In', new_item_path, class: 'pink waves-effect waves-light btn' %>
<%= link_to 'Check Out', checkout_path, class: 'orange waves-effect waves-light btn' %>
 
</div>