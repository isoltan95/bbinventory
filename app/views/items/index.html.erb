<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>
<%# app/views/restaurants/index.html.erb %>
<%= form_for_filterrific @filterrific do |f| %>
  <div class="row">
    <div class="span1 label_box">
      <h3>Search:</h3>
      <%= f.text_field(:by_search, class:'filterrific-periodically-observed') %>
    </div>
    <div class="span1 label_box">
      <h3>Select category:</h3>
      <%= f.select(:for_category, @filterrific.select_options[:for_category], { include_blank: '- Select -' }) %>
    </div>
    <%= link_to('Reset filters',reset_filterrific_url) %>
  </div>
<% end %>
<%= render( partial: 'items/list', locals: { items: @items} )%>


