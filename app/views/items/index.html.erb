<div class="row">
  <div class="col s12">
    <p id="notice"><%= notice %></p>

    <h1>Listing Items</h1>

    <%= form_for_filterrific @filterrific do |f| %>
      <div class="row">
        <div class="span1 label_box">
          <h3>Search by name:</h3>
          <%= f.text_field(:by_search, class:'filterrific-periodically-observed') %>
        </div>
        <div class="span1 label_box">
          <h3>Search by barcode:</h3>
          <%= f.text_field(:by_barcode, class:'filterrific-periodically-observed') %>
        </div>
        <div class="span1 label_box">
          <h3>Select category:</h3>
          <%= f.select(:for_category, @filterrific.select_options[:for_category], { include_blank: '- Select -' }) %>
        </div>
            <div class="span1 label_box">
          <h3>Select age:</h3>
          <%= f.select(:by_age, @filterrific.select_options[:by_age], { include_blank: '- Select -' }) %>
        </div>
        <%= link_to('Reset filters',reset_filterrific_url) %>
      </div>
    <% end %>
</div>
</div>

<div class="row">
  <div class="col s6">
    <%= render( partial: 'items/list', locals: { items: @items} )%>
  </div>
</div>
