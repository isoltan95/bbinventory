<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited barcode from being entered.</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :barcode %><br>
    <%= f.text_field :barcode, autofocus: true %>
  </div> 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

