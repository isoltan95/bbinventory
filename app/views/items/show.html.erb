<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col s12 m6">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Item Information</span>
        <h4><%= @item.name %></h4>
        <table class="responsive-table">
          <tr><td><b>Barcode: </b><%= @item.barcode %></td></tr>
          <tr><td><b>Category:</b>
            <% if !@item.category.nil? %>
              <%= @item.category.name %>
            <% end %></td></tr>
          <tr><td><b>Gender: </b><%= @item.gender %></td></tr>
          <tr><td><b>Age: </b><%= @item.age %></td></tr>
          <tr><td><b>Quantity: </b><%= @item.quantity %></td></tr>
          <tr><td><b>Notes: </b><%= @item.notes %></td></tr>
          <tr><td><b>Donated: </b><%= @item.donated ? 'Yes' : 'No' %></td></tr>
        </table>
      </div>
      <div class="card-action">
        <%= link_to 'Edit', edit_item_path(@item) %>
        <%= link_to 'Back', items_path %>
      </div>
    </div>
  </div>
</div>











