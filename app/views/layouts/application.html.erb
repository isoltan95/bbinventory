<!DOCTYPE html>
<html>
<head>
  <title>Bbinventory</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>
    <!-- CONTENT -->
    <div class= "container">

      <!--flash alert box for form -->
      <% flash.each do |name, msg| %>
      <div class="alert-box <%= name == :notice ? "success" : "warning" %> radius">
        <a href="#" class="close">&times;</a>
        <%= msg %>
      </div>
      <% end %>

      <div class="row">


      </div>  
    </div>

<%# yield %>

</body>

</html>
